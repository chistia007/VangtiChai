<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtTaka"
        style="@style/Taka"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/txtTaka"
        android:id="@+id/txtTakaLive"
        style="@style/liveText"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_below="@+id/txtTaka"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:id="@+id/parent1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/fiveHundred"
                android:id="@+id/txt500taka"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/fiveHundred0"
                android:layout_toEndOf="@+id/txt500taka"
                android:id="@+id/txt500takaInput" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 :"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:id="@+id/txt100taka"
                android:layout_below="@+id/txt500taka"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_below="@+id/txt500takaInput"
                android:layout_toEndOf="@+id/txt100taka"
                android:id="@+id/txt100takaInput"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 :"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:id="@+id/txt50taka"
                android:layout_below="@+id/txt100taka"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_below="@+id/txt100takaInput"
                android:layout_toEndOf="@+id/txt50taka"
                android:id="@+id/txt50takaInput" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 :"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:id="@+id/txt20taka"
                android:layout_below="@+id/txt50taka"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_below="@+id/txt50takaInput"
                android:layout_toEndOf="@+id/txt20taka"
                android:id="@+id/txt20takaInput" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 :"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:id="@+id/txt10taka"
                android:layout_below="@+id/txt20taka"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_below="@+id/txt20takaInput"
                android:layout_toEndOf="@+id/txt20taka"
                android:id="@+id/txt10takaInput"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 :"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:id="@+id/txt5taka"
                android:layout_below="@+id/txt10taka"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_below="@+id/txt10takaInput"
                android:layout_toEndOf="@+id/txt10taka"
                android:id="@+id/txt5takaInput" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 :"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:id="@+id/txt2taka"
                android:layout_below="@+id/txt5taka"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt5takaInput"
                android:layout_toEndOf="@+id/txt5taka"
                android:id="@+id/txt2takaInput"
                android:text="0"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 :"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:id="@+id/txt1taka"
                android:layout_below="@+id/txt2taka"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_below="@+id/txt2takaInput"
                android:layout_toEndOf="@+id/txt2taka"
                android:id="@+id/txt1takaInput" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="24sp"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/btn1"
                        android:background="@drawable/button_bg"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="24sp"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/btn2"
                        android:background="@drawable/button_bg"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="24sp"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/btn3"
                        android:background="@drawable/button_bg"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="24sp"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/btn4"
                        android:background="@drawable/button_bg"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="24sp"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/btn5"
                        android:background="@drawable/button_bg"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textSize="24sp"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/btn6"
                        android:background="@drawable/button_bg"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textSize="24sp"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/btn7"
                        android:background="@drawable/button_bg"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="24sp"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/btn8"
                        android:background="@drawable/button_bg"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textSize="24sp"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/btn9"
                        android:background="@drawable/button_bg"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="3dp"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="0"
                        android:id="@+id/btn0"
                        android:background="@drawable/button_bg"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ClEAR"
                        android:textSize="24sp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:id="@+id/btnClear"
                        android:background="@drawable/button_bg"/>

                </LinearLayout>




            </LinearLayout>



        </RelativeLayout>
    </LinearLayout>










</RelativeLayout>